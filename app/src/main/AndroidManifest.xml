<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coursework.foreignlanguagetranslation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Offline"></activity>
        <activity
            android:name=".Translate"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".LanguageSubscription"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".View_Phrases"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".Edit_Phrases"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".add_phrases"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>